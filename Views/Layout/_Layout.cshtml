<!DOCTYPE html>
<html xmlns="https://www.w3.org/1999/xhtml" lang="en" class="no-js">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@(Model.MetaTitle ?? Model.Title ?? Model.Key) - Ignia</title>
    <meta name="keywords" content="@Model.MetaKeywords" />
    <meta name="description" content="@Model.MetaDescription" />
    <link rel="canonical" href="http://www.ignia.com/@Request.Path.ToLower().TrimStart('/')" />
    <link rel="apple-touch-icon" sizes="180x180" href="/Images/Favicons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/Images/Favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/Images/Favicons/favicon-16x16.png" />
    <link rel="manifest" href="/Images/Favicons/manifest.json" />
    <link rel="mask-icon" href="/Images/Favicons/safari-pinned-tab.svg" color="#000000" />
    <link rel="shortcut icon" href="/Images/Favicons/favicon.ico" />
    <meta name="msapplication-config" content="/Images/Favicons/browserconfig.xml" />
    <meta name="theme-color" content="#ffffff" />
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <link rel="stylesheet" type="text/css" href="/Shared/Styles/Style.min.css" />
    @RenderSection("Head", false)
    <noscript id="DeferredStyles">
      @RenderSection("DeferredStyles", false)
    </noscript>
  </head>
  <body vocab="http://schema.org/" typeof="WebPage">

    <!-- Site Header Area -->
	  @if (IsSectionDefined("HeaderSection")) {
      @RenderSection("HeaderSection")
    }
    else {
      <header id="Header" class="site header" role="banner" vocab="http://schema.org" typeof="WPHeader">
        <div class="navbar grid-container">

          <!-- Menu open icon -->
          <button class="menu-toggle open-button hide-for-large" type="button" aria-label="Open menu" data-toggle="PrimaryNavigationSmallScreen"><i class="fas fa-bars"></i></button>
          <!-- Navigation Menu -->
          @Html.Partial("Menu")

          <!-- Logo Area -->
          <div class="logo"><a href="/Home/"><img id="BannerLogo" src="/Images/Logo.White.png" alt="Ignia is a software architecture and engineering firm. Let us build your product." /></a></div>

        </div>
      </header>
    }
    <!-- /Site Header Area -->

    @if (IsSectionDefined("MainContentSection")) {
      @RenderSection("MainContentSection")
    }
    else {

      <!-- Main Site Content Area -->
      <main id="MainContent" class="page content" role="main">
        <section itemscope itemtype="http://schema.org/WebPageElement" itemprop="mainContentOfPage">

          @if (IsSectionDefined("PageHeaderSection")) {
            <!-- Page Header -->
            @RenderSection("PageHeaderSection")
            <!-- /Page Header -->
          }

          <!-- Main Page Content -->
          @if (IsSectionDefined("PageBodySection")) {
            @RenderSection("PageBodySection")
          }
          else {
            @RenderBody()
          }
          <!-- /Main Page Content -->

        </section>
      </main>
      <!-- /Main Site Content Area -->
    }

    @if (IsSectionDefined("FooterSection")) {
      @RenderSection("FooterSection")
    } else {
      @Html.Partial("Footer")
    }

    <!-- jQuery -->
    <script src="~/Shared/Scripts/Vendor/jQuery/jquery-3.3.1.min.js"></script>
    <!-- Foundation -->
    <script src="~/Shared/Scripts/Vendor/ZURB/foundation.min.js"></script>
    <!-- GreenSock -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.4/TweenMax.min.js"></script>
    <!-- ScrollMagic -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/animation.gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/debug.addIndicators.js"></script>

    <script>
      var loadDeferredStyles = function () {
        var addStylesNode = document.getElementById("DeferredStyles");
        var replacement = document.createElement("div");
        replacement.innerHTML = addStylesNode.textContent;
        document.body.appendChild(replacement)
        addStylesNode.parentElement.removeChild(addStylesNode);
      };
      var raf = requestAnimationFrame || mozRequestAnimationFrame ||
        webkitRequestAnimationFrame || msRequestAnimationFrame;
      if (raf) raf(function () { window.setTimeout(loadDeferredStyles, 0); });
      else window.addEventListener('load', loadDeferredStyles);
    </script>

    <script>
      /**
       * Initialize Foundation
       */
      $(document).foundation();
    </script>
    <script src="/Shared/Scripts/Scripts.min.js" async defer></script>
    @RenderSection("Scripts", false)
  </body>
</html>
