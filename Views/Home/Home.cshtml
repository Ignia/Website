  <!-- Contact -->
  <section id="Contact" class="panel contact full-height" role="complementary">
    <div class="container grid-container">
      <header><h1 class="panel-heading">Contact Us</h1></header>

      <section class="grid-x grid-margin-x">

        <div class="cell hide-for-medium">
          <!-- Heading -->
          <h2 class="section-heading headline">Talk to us&mdash;we&rsquo;d love to hear&nbsp;from&nbsp;you!</h2>
        </div>

        <div class="cell small-10 small-offset-1 small-order-2 medium-7 medium-offset-0 medium-order-1 large-8 large-order-1">
          <!-- Contact Form -->
          <form id="ContactForm" name="contactForm" class="form contact" role="form">

            <!-- Heading -->
            <h2 class="section-heading headline hide-for-small-only">Talk to us&mdash;we&rsquo;d love to hear&nbsp;from&nbsp;you!</h2>

            <!-- Form Messages -->
            <h4 id="MessageLengthMessage" class="error hidden">
              Please provide more information about the product you need built.
            </h4>
            <h4 id="SendSuccessMessage" class="success hidden">
              Thank you for your inquiry. We will contact you shortly.
            </h4>
            <h4 id="SendErrorMessage" class="error hidden">
              There was an error sending your message. Please try again later&ndash;we want to hear from you.
            </h4>
            <!-- /Form Messages -->

            <!-- Form Fields and Submit -->
            <fieldset>

              <label for="contactName">
                <input type="text" id="ContactName" name="contactName" class="form-control" placeholder="&#160;" required />
                <span class="label">Name</span>
              </label>

              <label for="contactEmail">
                <input type="email" id="ContactEmail" name="contactEmail" placeholder="&#160;" required />
                <span class="label">Email</span>
              </label>

              <label for="contactMessage">
                <textarea id="ContactMessage" name="contactMessage" class="form-control" rows="4" cols="50" placeholder="&#160;" required minlength="5"></textarea>
                <span class="label">Message</span>
              </label>

              <button type="submit">Submit</button>

            </fieldset>
            <!-- /Form Fields and Submit -->

          </form>
          <!-- /Contact Form -->
        </div>

        <div class="cell small-10 small-offset-1 small-order-1 medium-5 medium-offset-0 medium-order-2 large-4 large-order-2">
          <!-- Sidebar: Quick Contact Info -->
          <aside class="sidebar right" role="complementary">
            <div class="contact link"><a href="mailto:info@ignia.com" class="icon"><i class="fas fa-envelope"></i></a> <a href="mailto:info@ignia.com" class="text">info@ignia.com</a></div>
            <div class="contact link"><a href="tel:18774979284" class="icon"><i class="fas fa-phone"></i></a> <a href="tel:18774979284" class="text">+1 (877) 497-9284</a></div>
          </aside>
          <!-- /Sidebar: Quick Contact Info -->
        </div>

      </section>
    </div>
  </section>

}

